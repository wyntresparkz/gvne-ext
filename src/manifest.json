{
    "name": "Gemini Visual Novel Engine",
    "description": "Transform Google Gemini into an immersive Visual Novel experience",
    "version": "0.1.0",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ]
}